<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.swein.framework.module.appanalysisreport.demo.howtouse.AppAnalysisReportDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonCrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="make crash"
            android:textColor="@color/black"
            android:background="#0000"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonException"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="make normal exception"
            android:textColor="@color/black"
            android:background="#0000"/>

        <Button
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:id="@+id/buttonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="just click"
            android:textColor="@color/black"
            android:background="#0000"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonLongClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="long click"
            android:textColor="@color/black"
            android:background="#0000"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonClearDB"
        android:text="clear DB"
        android:textColor="@color/gray_light"
        android:textAllCaps="false"
        android:background="#0000"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/buttonSendReport"
        android:text="send report"
        android:textColor="@color/gray_light"
        android:textAllCaps="false"
        android:background="#0000"
        android:layout_gravity="right|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_margin="10dp"
        android:id="@+id/spinnerManageDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>


</FrameLayout>
