<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.swein.framework.module.mdmcustom.fragment.SHMDMFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayoutActionBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"/>


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="160dp"
            android:elevation="100dp"
            android:background="@color/white"
            card_view:cardCornerRadius="16dp"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >

                    <ImageView
                        android:background="@color/transparent"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/img_no_photo"
                        android:id="@+id/imageViewNoPhoto"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <ImageView
                        android:background="@color/transparent"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/img_no_capture"
                        android:id="@+id/imageViewNoCapture"
                        android:scaleType="fitCenter"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButtonCheck"
                    android:background="@color/transparent"

                    android:layout_marginTop="40dp"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_height="30dp" />

                <TextView
                    android:background="@color/transparent"
                    android:id="@+id/textViewCheck"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="6pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:background="@color/transparent"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>


</FrameLayout>
