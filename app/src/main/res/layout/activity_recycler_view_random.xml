<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_recycler_view_random"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swein.recycleview.random.activity.RecyclerViewRandomActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:focusable="true"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            >

            <EditText
                android:textAllCaps="false"
                android:id="@+id/tagEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageButton
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                android:id="@+id/clearImageButton"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recyclerview_random_clear_input"/>

        </RelativeLayout>

        <ImageButton
            android:visibility="invisible"
            android:padding="6dp"
            android:id="@+id/searchTagImageButton"
            android:background="#00000000"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/recyclerview_random_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageButton
            android:padding="6dp"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:src="@drawable/recyclerview_random_select_normal"
            android:id="@+id/checkImageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayoutRandom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            >

            <!--
            <org.lucasr.twowayview.TwoWayView
                android:id="@+id/twoWayView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:twowayview_numColumns="3"
                app:twowayview_numRows="3"/>
                -->
            
            <com.swein.recycleview.random.customview.AutofitRecyclerView
                android:id="@+id/recyclerViewRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="true"
                
                />
            
            <!--
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="true"
                />
            -->
        </android.support.v4.widget.SwipeRefreshLayout>

        <!--
        <com.swein.recycleview.random.customview.CustomViewClass
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:layout_centerInParent="true"/>
        -->
        <ImageButton
            android:visibility="gone"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="#fff"
            android:src="@drawable/recyclerview_random_search"
            android:id="@+id/searchImageButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
